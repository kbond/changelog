#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use Zenstruck\Changelog\Command\CreateCommand;
use Zenstruck\Changelog\Command\InitCommand;use Zenstruck\Changelog\Command\PreviewCommand;
use Zenstruck\Changelog\Command\UpdateCommand;

set_time_limit(0);

foreach ([__DIR__ . '/../../../autoload.php', __DIR__ . '/../vendor/autoload.php'] as $autoload) {
    if (file_exists($autoload)) {
        break;
    }
}

require $autoload;

$application = new Application('zenstruck/changelog', '@dev');

$application->addCommands([
    $default = new PreviewCommand(),
    new InitCommand(),
    new CreateCommand(),
    new UpdateCommand(),
]);

$application->setDefaultCommand($default->getName());
$application->run();
